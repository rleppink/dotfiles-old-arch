[colors]
pink  = ${xrdb:*.color1:#FF0000}
light = ${xrdb:*.color0:#FF0000}
dark  = ${xrdb:*.color15:#FF0000}


[global/wm]
margin-top = 0
margin-bottom = 0


[section/shared]
monitor = ${env:MONITOR:LVDS-1}
height = 20

border-bottom-size = 2
border-bottom-color = ${colors.pink}

font-0 = Dejavu Sans Mono:size=8;3

overline-size = 2
undeline-size = 2

separator = " "

wm-restack = bspwm


[bar/bar]
inherit = section/shared

height = 20
offset-x = 0
offset-y = 0

background = ${colors.light}
foreground = ${colors.dark}

padding-left = 1
padding-right = 2

modules-center = bspwm 
modules-right  = battery date


[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.pink}
label-focused-foreground = ${colors.light}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%•
label-urgent-padding = 2

label-empty = %name%
label-empty-padding = 2


[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5

label-charging = %percentage%%+
label-charging-foreground = ${colors.light}
label-charging-background = ${colors.pink}
label-charging-padding = 1

label-discharging = %percentage%%-
label-discharging-foreground = ${colors.light}
label-discharging-background = ${colors.pink}
label-discharging-padding = 1


[module/date]
type = internal/date
interval = 5

date = "%A %d %B"

time = %H:%M

label = %date% %time%
label-foreground = ${colors.light}
label-background = ${colors.pink}
label-padding = 1


[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.foreground}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

